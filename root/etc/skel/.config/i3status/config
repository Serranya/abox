# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	# color2 of terminal
	color_good = "#00bb00"
	# color3 of terminal
	color_degraded = "#fecd22"
	# color1 of terminal
	color_bad = "#a60001"
	# foreground of terminal
	color_separator = "#cdcdcd"
	interval = 5
}

#order += "ipv6"
order += "run_watch VBoxClient"
order += "disk /"
order += "ethernet _first_"
order += "tztime local"

run_watch "VBoxClient" {
	pidfile = "/home/serra/.vboxclient-display.pid"
	format = "%title: %status"
	format_down = "%title: %status"
}

disk "/" {
	# Bad state if less than 7 percent are free
	low_threshold = 7
	format = "%percentage_avail (%avail)/ %total"
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
	format_up = "%ip (%speed)"
	format_down = "E: down"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
